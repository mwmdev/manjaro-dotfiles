{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "vvv-log",
            "type": "shell",
            "command": "lnav ~/cloud/dev/log/php/*errors.log",
            "options": {
                "statusbar": {
                    "label" : "$(debug-alt)",
                    "tooltip": "Show PHP error logs",
                }
            }
        },
        {
            "label": "wp update",
            "type": "shell",
            "command": "cd public_html && mwmup",
            "options": {
                "statusbar": {
                    "label" : "$(verified)",
                    "tooltip": "Update plugins",
                }
            }
        },
        {
            "label": "wp deploy",
            "type": "shell",
            "command": "cd public_html && mwmdp",
            "options": {
                "statusbar": {
                    "label" : "$(rocket)",
                    "tooltip": "Deploy",
                }
            }
        },
    ]
}