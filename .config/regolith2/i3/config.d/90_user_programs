bindsym $mod+Shift+y exec --no-startup-id $term -name floating_ytdl -e youtube-dl -o "~/Downloads/video/%(title)s.%(ext)s" $(xclip -o)
# Mod+Shift+Y:
# Mod+Ctrl+Y:
# Mod+Alt+Y:
