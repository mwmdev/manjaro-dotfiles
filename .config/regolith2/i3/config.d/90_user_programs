for_window [instance="floating_ytdl_audio"] floating enable, resize set 400 200, move position center
bindsym $mod+Shift+s exec --no-startup-id alacritty --class floating_ytdl_audio -e youtube-dl --extract-audio --audio-format mp3 -o "~/Downloads/audio/%(title)s.%(ext)s" $(xclip -o)
# Mod+Ctrl+S:
# Mod+Alt+S:
